---
interface Props {
  name: string;
  description: string;
  url: string;
  category: string;
}

const { name, description, url, category } = Astro.props;
---

<div class="tool-card">
  <div class="card-glow"></div>
  <div class="tool-header">
    <h2 class="tool-name">{name}</h2>
    <span class="tool-category">{category}</span>
  </div>
  <p class="tool-description">{description}</p>
  <a href={url} target="_blank" rel="noopener noreferrer" class="tool-link">
    Visit Website 
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="link-icon">
      <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
      <polyline points="15 3 21 3 21 9"></polyline>
      <line x1="10" y1="14" x2="21" y2="3"></line>
    </svg>
  </a>
</div>

<style>
  .tool-card {
    background-color: rgba(25, 28, 45, 0.7);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border-radius: 12px;
    padding: 1.8rem;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    height: 100%;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(80, 200, 255, 0.1);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  .card-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(
      circle at center,
      rgba(80, 200, 255, 0.1) 0%,
      rgba(180, 100, 255, 0.05) 30%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: -1;
    pointer-events: none;
  }

  .tool-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: rgba(80, 200, 255, 0.3);
    box-shadow: 
      0 15px 40px rgba(0, 0, 0, 0.3),
      0 0 20px rgba(80, 200, 255, 0.2);
  }

  .tool-card:hover .card-glow {
    opacity: 1;
  }

  .tool-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.2rem;
  }

  .tool-name {
    font-size: 1.5rem;
    margin: 0;
    color: white;
    font-family: 'Space Grotesk', sans-serif;
    font-weight: 600;
    background: linear-gradient(90deg, #fff, rgba(180, 190, 220, 0.8));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .tool-category {
    background: linear-gradient(90deg, rgba(80, 200, 255, 0.8), rgba(180, 100, 255, 0.8));
    color: white;
    font-size: 0.8rem;
    padding: 0.4rem 0.8rem;
    border-radius: 20px;
    white-space: nowrap;
    font-weight: 500;
    box-shadow: 0 0 10px rgba(80, 200, 255, 0.3);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .tool-description {
    color: rgba(180, 190, 220, 0.9);
    flex-grow: 1;
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .tool-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: rgb(80, 200, 255);
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: auto;
    position: relative;
    width: fit-content;
  }

  .tool-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, rgb(80, 200, 255), rgb(180, 100, 255));
    transition: width 0.3s ease;
  }

  .tool-link:hover {
    color: rgb(180, 100, 255);
  }

  .tool-link:hover::after {
    width: 100%;
  }

  .link-icon {
    transition: transform 0.3s ease;
  }

  .tool-link:hover .link-icon {
    transform: translate(3px, -3px);
  }

  @media (max-width: 768px) {
    .tool-card {
      padding: 1.5rem;
    }
  }
</style>
